<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/txt_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/txt_grey</item>
        <item name="colorPrimaryDark">@color/txt_grey</item>
        <item name="colorAccent">@color/txt_grey</item>
        <item name="colorControlNormal">@color/txt_grey</item>
        <item name="colorControlActivated">@color/txt_grey</item>
        <item name="colorControlHighlight">@color/txt_grey</item>
    </style>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/toolbar</item>
        <item name="colorControlHighlight">@color/toolbar</item>
    </style>
</resources>
